﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibrarySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibrarySystem.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                </div>
                <div class="header-area col-md-4 mx-right">
                    @await Html.PartialAsync("Header")
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer fixed-bottom bg-light">
        <div class="container text-center">
            <span class="text-muted"> &copy; 2023 - Library System </span>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
   
    <script>
        // Sayfa scroll olayını dinlemek için bir event handler ekleyin
        $(window).scroll(function () {
            // Footer'ın sayfanın altında sabitlenmesini sağlayın
            var windowHeight = $(window).height();
            var contentHeight = $('.container').outerHeight();
            var scrollTop = $(window).scrollTop();
            var footerHeight = $('.footer').outerHeight();

            if (windowHeight + scrollTop >= contentHeight) {
                $('.footer').css('position', 'relative');
            } else {
                $('.footer').css('position', 'fixed');
            }
        });
    </script>

</body>
</html>



